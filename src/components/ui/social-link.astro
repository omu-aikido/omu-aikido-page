---
import Icon from "@/components/root/icon.astro"
import { iconPaths } from "@/components/root/iconPaths"

interface Props {
  link: string
  aria: string
  icon: keyof typeof iconPaths
  text: string
}
---

<a
  href={Astro.props.link}
  aria-label={Astro.props.aria}
  target="_blank"
  rel="noopener noreferrer"
  class="items-justify-center flex items-center text-neutral-800 hover:text-cyan-500 dark:text-neutral-200"
>
  <Icon icon={Astro.props.icon} />
  <span class="mr-2 hidden md:block">
    {Astro.props.text}
  </span>
</a>
