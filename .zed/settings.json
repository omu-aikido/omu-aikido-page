{
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"]
      }
    },
    "vscode-css-language-server": {
      "settings": {
        "css": {
          "lint": {
            "unknownAtRules": "ignore"
          }
        }
      }
    }
  },
  "context_servers": {
    "Astro docs": {
      "source": "custom",
      "command": "bunx",
      "args": ["-y", "mcp-remote", "https://mcp.docs.astro.build/mcp"]
    }
  },
  "format_on_save": "off",
  "language_servers": ["!markdown-oxide", "..."]
}
